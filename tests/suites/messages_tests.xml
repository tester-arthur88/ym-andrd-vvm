<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="YouMail - Android Messages Tests">

    <test name="Messages: Load More messages" preserve-order="true">
        <classes>
            <class name="tests.MessagesTest">
                <methods>
                    <include name="loadMoreMessages"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Messages: Play message" preserve-order="true">
        <classes>
            <class name="tests.MessagesTest">
                <methods>
                    <include name="openMessage"></include>
                    <include name="playMessage"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Messages: Call sender" preserve-order="true">
        <classes>
            <class name="tests.MessagesTest">
                <methods>
                    <include name="openMessage"></include>
                    <include name="callSender"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Messages: Text sender" preserve-order="true">
        <classes>
            <class name="tests.MessagesTest">
                <methods>
                    <include name="openMessage"></include>
                    <include name="textSender"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Messages: Forward message" preserve-order="true">
        <classes>
            <class name="tests.MessagesTest">
                <methods>
                    <include name="openMessage"></include>
                    <include name="forwardMessage"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Messages: Ditch sender" preserve-order="true">
        <classes>
            <class name="tests.MessagesTest">
                <methods>
                    <include name="openMessage"></include>
                    <include name="ditchSender"></include>
                </methods>
            </class>
        </classes>
    </test>

</suite>